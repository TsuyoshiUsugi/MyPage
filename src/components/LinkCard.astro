---
import { fetchOGP } from '../utils/ogp';

export interface Props {
  url: string;
  title?: string;
  description?: string;
  image?: string;
}

const { url, title, description, image } = Astro.props;

// OGPデータを取得（ビルド時）
const ogpData = await fetchOGP(url);

// プロパティで指定された値を優先、なければOGPデータを使用
const cardTitle = title || ogpData.title || new URL(url).hostname;
const cardDescription = description || ogpData.description;
const cardImage = image || ogpData.image;
---

<div class="link-card">
  <a href={url} target="_blank" rel="noopener noreferrer">
    {cardImage && (
      <div class="image-container">
        <img 
          src={cardImage} 
          alt={cardTitle} 
          loading="lazy" 
          onError="this.parentElement.style.display='none'"
        />
      </div>
    )}
    <div class="content">
      <div class="title">{cardTitle}</div>
      {cardDescription && <div class="description">{cardDescription}</div>}
      <span class="url">{new URL(url).hostname}</span>
    </div>
  </a>
</div>

<style>
.link-card {
  border: 1px solid var(--border-color, #2d3748);
  border-radius: 8px;
  overflow: hidden;
  margin: 1rem 0;
  background-color: var(--bg-secondary, #1a1a1a);
  transition: transform 0.2s ease, border-color 0.2s ease;
}

.link-card:hover {
  transform: translateY(-2px);
  border-color: var(--accent-color, #8ab4f8);
}

.link-card a {
  display: flex;
  text-decoration: none;
  color: inherit;
  height: auto;
}

.image-container {
  flex-shrink: 0;
  width: 120px;
  height: 90px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

.image-container img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.content {
  padding: 0.5rem;
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  gap: 0.25rem;
}

.title {
  margin: 0;
  font-size: 0.9rem;
  font-weight: 600;
  color: var(--text-primary, #e6e6e6);
  line-height: 1.3;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.description {
  margin: 0;
  font-size: 0.75rem;
  color: var(--text-secondary, #9aa0a6);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.url {
  margin: 0;
  margin-top: auto;
  font-size: 0.7rem;
  color: var(--text-secondary, #9aa0a6);
  opacity: 0.8;
  line-height: 1.2;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

@media (max-width: 480px) {
  .link-card a {
    flex-direction: column;
  }
  
  .image-container {
    width: 100%;
    height: 60px;
  }
  
  .content {
    min-height: auto;
    padding: 0.75rem;
  }
  
  .title {
    font-size: 0.9rem;
  }
  
  .description {
    font-size: 0.8rem;
  }
}
</style>