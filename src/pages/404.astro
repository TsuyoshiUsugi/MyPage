      align-items: center;
    }
    
    .btn-primary,
    .btn-secondary {
      width: 100%;
      max-width: 200px;
    }
    
    .suggestion-list {
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .suggestions {
      padding: 1.5rem;
    }
    
    .element {
      font-size: 1.5rem;
    }
  }
</style>