<script>
  // ã‚¿ã‚°ãƒ•ã‚£ãƒ«ã‚¿ãƒ¼æ©Ÿèƒ½
  document.addEventListener('DOMContentLoaded', () => {
    const tagButtons = document.querySelectorAll('.tag-btn');
    const postCards = document.querySelectorAll('[data-tags]');
    
    // ãƒ‡ãƒ¼ã‚¿å±æ€§ã‚’postCardã«è¿½åŠ ã™ã‚‹å‡¦ç†ã¯ã€PostCardã‚³ãƒ³ãƒãƒ¼ãƒãƒ³ãƒˆã§å®Ÿè£…ã•ã‚Œã‚‹å¿…è¦ãŒã‚ã‚‹
    // ã“ã“ã§ã¯åŸºæœ¬çš„ãªãƒ•ã‚£ãƒ«ã‚¿ãƒ¼æ©Ÿèƒ½ã®éª¨çµ„ã¿ã‚’æä¾›
    
    tagButtons.forEach(button => {
      button.addEventListener('click', () => {
        // ã‚¢ã‚¯ãƒ†ã‚£ãƒ–ãƒœã‚¿ãƒ³ã®åˆ‡ã‚Šæ›¿ãˆ
        tagButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        const selectedTag = button.getAttribute('data-tag');
        
        // ã‚«ãƒ¼ãƒ‰ã®ãƒ•ã‚£ãƒ«ã‚¿ãƒªãƒ³ã‚°å‡¦ç†
        postCards.forEach(card => {
          if (selectedTag === 'all') {
            card.style.display = 'block';
          } else {
            const cardTags = card.getAttribute('data-tags')?.split(',') || [];
            if (cardTags.includes(selectedTag)) {
              card.style.display = 'block';
            } else {
              card.style.display = 'none';
            }
          }
        });
      });
    });
  });
</script>