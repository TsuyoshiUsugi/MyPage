---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import NowPlaylist from '../components/NowPlaylist.astro';
import { getCollection } from 'astro:content';

// ÊúÄÊñ∞„ÅÆ„Éñ„É≠„Ç∞Ë®ò‰∫ã„Å®WorksË®ò‰∫ã„ÇíÂêà„Çè„Åõ„Å¶3‰ª∂ÂèñÂæó
const allPosts = await getCollection('blog');
const allWorks = await getCollection('works');

// „Éñ„É≠„Ç∞„Å®Works„ÇíÁµ±‰∏Ä„Éï„Ç©„Éº„Éû„ÉÉ„Éà„Å´Â§âÊèõ
const blogItems = allPosts.map(post => ({
  type: 'blog',
  slug: post.slug,
  title: post.data.title,
  description: post.data.description,
  date: post.data.pubDate,
  priority: post.data.priority || 0,
  tags: post.data.tags,
  url: `/blog/${post.slug}/`
}));

const workItems = allWorks
  .filter(work => work.data.status === 'published')
  .map(work => ({
    type: 'works',
    slug: work.slug,
    title: work.data.title,
    description: work.data.description,
    date: work.data.date,
    priority: work.data.priority || 0,
    tags: work.data.technologies,
    url: `/works/${work.slug}/`
  }));

// ÂÖ®„Å¶„ÇíÂêà„Çè„Åõ„Å¶Êó•‰ªò„ÉªÂÑ™ÂÖàÂ∫¶„Åß„ÇΩ„Éº„Éà
const latestPosts = [...blogItems, ...workItems]
  .sort((a, b) => {
    const dateA = new Date(a.date).getTime();
    const dateB = new Date(b.date).getTime();
    if (dateA === dateB) {
      // Âêå„ÅòÊó•‰ªò„ÅÆÂ†¥Âêà„ÅØÂÑ™ÂÖàÂ∫¶„Åß‰∏¶„Å≥Êõø„ÅàÔºàÊï∞ÂÄ§„ÅåÂ§ß„Åç„ÅÑÊñπ„ÅåÂæå„Å´Ë°®Á§∫Ôºâ
      return a.priority - b.priority;
    }
    return dateB - dateA;
  })
  .slice(0, 3);

// „Éá„Éê„ÉÉ„Ç∞Áî®
console.log('All works:', allWorks.map(w => ({ slug: w.slug, status: w.data.status, image: w.data.image })));
console.log('Published works with images:', allWorks.filter(work => work.data.image && work.data.status === 'published'));
---

<BaseLayout 
  title="„É¢„É´„É¢ Portfolio" 
  description="„Ç®„É≥„Ç∏„Éã„Ç¢„ÉªÈñãÁô∫ËÄÖ„ÅÆ„Éù„Éº„Éà„Éï„Ç©„É™„Ç™„Çµ„Ç§„Éà„ÄÇÊäÄË°ì„Éñ„É≠„Ç∞„ÄÅ‰ΩúÂìÅÁ¥π‰ªã„ÄÅÈü≥Ê•Ω„Éó„É¨„Ç§„É™„Çπ„Éà„Å™„Å©„ÇíÊé≤Ëºâ„Åó„Å¶„ÅÑ„Åæ„Åô„ÄÇ"
>
  <!-- „Éí„Éº„É≠„Éº„Çª„ÇØ„Ç∑„Éß„É≥ -->
  <section class="hero">
    <!-- ËÉåÊôØ„Ç´„É´„Éº„Çª„É´ -->
    {allWorks.filter(work => work.data.image && work.data.status === 'published').length > 0 && (
      <div class="hero-background">
        <div class="carousel-container animate">
          {allWorks.filter(work => work.data.image && work.data.status === 'published').map((work, index) => (
            <div class="carousel-slide">
              <img src={work.data.image} alt={work.data.title} loading="lazy" />
            </div>
          ))}
          {/* ÁîªÂÉè„ÇíË§áË£Ω„Åó„Å¶Á∂ôÁ∂öÁöÑ„Å´„É´„Éº„Éó */}
          {allWorks.filter(work => work.data.image && work.data.status === 'published').map((work, index) => (
            <div class="carousel-slide">
              <img src={work.data.image} alt={work.data.title} loading="lazy" />
            </div>
          ))}
        </div>
      </div>
    )}
    
    <div class="hero-content">
      <h1 class="hero-title">
        „Åì„Çì„Å´„Å°„ÅØ„ÄÅ<br />
        <span class="accent">„É¢„É´„É¢</span> „Åß„Åô
      </h1>
      <p class="hero-description">
        „Ç®„É≥„Ç∏„Éã„Ç¢„ÉªÈñãÁô∫ËÄÖ„Å®„Åó„Å¶Êó•„ÄÖÂ≠¶„Çì„Å†„Åì„Å®„ÇÑ‰ΩúÂìÅ„ÇíÁ¥π‰ªã„Åó„Å¶„ÅÑ„Åæ„Åô„ÄÇ<br />
        ÊäÄË°ì„Éñ„É≠„Ç∞„ÇÑ„Éó„É≠„Ç∏„Çß„ÇØ„Éà„ÄÅË∂£Âë≥„ÅÆÈü≥Ê•Ω„Å™„Å©„ÇÇÂÖ±Êúâ„Åó„Å¶„ÅÑ„Åæ„Åô„ÄÇ
      </p>
      <div class="hero-actions">
        <a href="/about" class="btn-primary">About Me</a>
        <a href="/works" class="btn-secondary">Works</a>
      </div>
    </div>
  </section>

  <!-- ÊúÄÊñ∞„Éñ„É≠„Ç∞Ë®ò‰∫ã -->
  <section class="latest-posts">
    <div class="section-header">
      <h2>Latest Posts</h2>
      <a href="/blog" class="view-all">„Åô„Åπ„Å¶Ë¶ã„Çã ‚Üí</a>
    </div>
    
    {latestPosts.length > 0 ? (
      <div class="posts-grid">
        {latestPosts.map((item) => (
          <a href={item.url} class="post-item">
            <article class="post-card">
              <div class="post-meta">
                <span class="post-type">{item.type === 'blog' ? 'Blog' : 'Works'}</span>
                <time datetime={item.date.toISOString()}>
