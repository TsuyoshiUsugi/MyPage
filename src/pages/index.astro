<style>
  /* èƒŒæ™¯ã‚«ãƒ«ãƒ¼ã‚»ãƒ« */
  .carousel-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    overflow: hidden;
  }
  
  .carousel-container {
    display: flex;
    width: 500%;
    height: 100%;
    animation: carousel 30s infinite linear;
  }
  
  .carousel-slide {
    flex: 1;
    position: relative;
    overflow: hidden;
  }
  
  .carousel-slide img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    opacity: 0.25;
    filter: blur(1px);
  }
  
  @keyframes carousel {
    0% { transform: translateX(0); }
    100% { transform: translateX(-20%); }
  }

  /* ãƒ’ãƒ¼ãƒ­ãƒ¼ã‚»ã‚¯ã‚·ãƒ§ãƒ³ */
  .hero {
    position: relative;
    text-align: center;
    padding: 4rem 0 6rem 0;
    overflow: hidden;
  }
  
  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 600px;
    margin: 0 auto;
    background: rgba(15, 17, 21, 0.9);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 3rem 2rem;
  }
  
  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }
  
  .accent {
    color: var(--accent);
  }
  
  .hero-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 2rem;
  }
  
  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .btn-primary,
  .btn-secondary {
    padding: 0.75rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 2px solid;
  }
  
  .btn-primary {
    background: var(--accent);
    color: var(--bg-primary);
    border-color: var(--accent);
  }
  
  .btn-primary:hover {
    background: transparent;
    color: var(--accent);
  }
  
  .btn-secondary {
    background: transparent;
    color: var(--accent);
    border-color: var(--accent);
  }
  
