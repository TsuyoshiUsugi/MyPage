  }
  
  /* æœ€æ–°ãƒ–ãƒ­ã‚°è¨˜äº‹ */
  .latest-posts {
    margin: 4rem 0;
  }
  
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .post-item {
    text-decoration: none;
    color: inherit;
  }
  
